    "            outfile.write(\"sphere{{<{},{},{}>,{} texture{{pigment{{color Green}}}}}}\\n\".format(subdata[j*int(conditions[\"Ndomains\"])+k,0],subdata[j*int(conditions[\"Ndomains\"])+k,1],subdata[j*int(conditions[\"Ndomains\"])+k,2],conditions[\"ﾏソ"]/2.0))\n",
    "            outfile.write(\"cylinder{{<{},{},{}>,<{},{},{}>,{} texture{{pigment{{color Green}}}}}}\\n\".format(subdata[j*int(conditions[\"Ndomains\"])+k,0],subdata[j*int(conditions[\"Ndomains\"])+k,1],subdata[j*int(conditions[\"Ndomains\"])+k,2],subdata[j*int(conditions[\"Ndomains\"])+k+1,0],subdata[j*int(conditions[\"Ndomains\"])+k+1,1],subdata[j*int(conditions[\"Ndomains\"])+k+1,2],conditions[\"ﾏソ"]/2.0))\n",
